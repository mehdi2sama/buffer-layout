{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "typedocOptions": {
    "entryPoints": ["./src/Layout.ts"],
    "out": "docs",
    "readme": "README.md"
  }
}
